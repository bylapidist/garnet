{
  "name": "@lapidist/garnet-react",
  "version": "0.5.48",
  "description": "Lapidist components",
  "author": {
    "name": "Brett Dorrans",
    "email": "hello@lapidist.net"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bylapidist/garnet.git"
  },
  "bugs": {
    "url": "https://github.com/bylapidist/garnet/issues"
  },
  "homepage": "https://github.com/bylapidist/garnet#readme",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "react",
    "garnet",
    "lapidist",
    "components",
    "component library",
    "design system"
  ],
  "type": "module",
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.umd.js",
      "import": "./dist/index.es.js"
    },
    "./style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "watch": "concurrently npm:watch:ts npm:watch:vite",
    "watch:ts": "tsc -w",
    "watch:vite": "vite build --watch",
    "watch:tests": "vitest",
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "test": "vitest run --coverage",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "snapshots": "vitest run --update"
  },
  "dependencies": {
    "@lapidist/garnet-styles": "^0.5.48",
    "@lapidist/garnet-tokens": "^0.5.4",
    "react": "18.x",
    "react-dom": "18.x"
  },
  "devDependencies": {
    "@lapidist/garnet-types": "^0.5.0"
  },
  "peerDependencies": {
    "react": "18.x",
    "react-dom": "18.x"
  }
}
