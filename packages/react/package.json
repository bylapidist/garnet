{
  "name": "@lapidist/garnet-react",
  "version": "0.1.1-beta.0",
  "description": "Lapidist components",
  "author": {
    "name": "Brett Dorrans",
    "email": "hello@lapidist.net"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bylapidist/garnet.git"
  },
  "bugs": {
    "url": "https://github.com/bylapidist/garnet/issues"
  },
  "homepage": "https://github.com/bylapidist/garnet#readme",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "react",
    "garnet",
    "lapidist",
    "components",
    "component library",
    "design system"
  ],
  "type": "module",
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.umd.js",
      "import": "./dist/index.es.js"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "watch": "tsc -w",
    "watch:tests": "vitest",
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "test": "vitest run --coverage",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "snapshots": "vitest run --update"
  },
  "dependencies": {
    "@lapidist/garnet-styles": "^0.1.1-beta.0",
    "react": "18.x",
    "react-dom": "18.x"
  },
  "devDependencies": {
    "@lapidist/garnet-scripts": "^0.1.1-beta.0",
    "@lapidist/garnet-types": "^0.1.1-beta.0",
    "@testing-library/react": "14.0.0",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "@vitejs/plugin-react": "4.0.4",
    "@vitest/coverage-v8": "0.34.2",
    "jsdom": "22.1.0",
    "vite": "4.4.9",
    "vite-plugin-dts": "3.5.2",
    "vitest": "0.34.2"
  },
  "peerDependencies": {
    "react": "18.x",
    "react-dom": "18.x"
  }
}
