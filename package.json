{
  "name": "@lapidist/garnet",
  "version": "0.0.0",
  "private": true,
  "author": {
    "name": "Brett Dorrans",
    "email": "hello@lapidist.net"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bylapidist/garnet.git"
  },
  "bugs": {
    "url": "https://github.com/bylapidist/garnet/issues"
  },
  "homepage": "https://github.com/bylapidist/garnet#readme",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "storybook": "npx lerna run storybook",
    "build": "npx lerna run build",
    "lint": "npx lerna run lint",
    "fix": "npx lerna run fix",
    "test": "npx lerna run test",
    "watch": "npx lerna run watch",
    "snapshots": "npx lerna run snapshots",
    "typecheck": "npx lerna run typecheck",
    "prepare": "test -d node_modules/husky && husky install",
    "commit": "cz",
    "lerna:version": "npx lerna version"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.8.0",
    "@commitlint/config-conventional": "17.8.0",
    "@commitlint/cz-commitlint": "17.8.0",
    "@testing-library/react": "14.0.0",
    "@types/react": "18.2.30",
    "@types/react-dom": "18.2.14",
    "@vitejs/plugin-react": "4.1.0",
    "@vitest/coverage-v8": "0.34.6",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.3",
    "jsdom": "22.1.0",
    "lerna": "7.4.1",
    "typescript": "5.2.2",
    "vite": "4.5.0",
    "vite-plugin-dts": "3.6.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
